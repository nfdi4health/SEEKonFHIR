

<% if @folder.respond_to?(:assay) -%>
    <%= render :partial=>"assay_folder_details" -%>
<% else -%>
    <%= render :partial=>"folders/folder_details",:object=>folder -%>
<% end -%>


<ul class="asset_cards">

    <%= render :partial=>"folders/asset",:collection=>folder.authorized_hanging_assets,:locals=>{:folder=>folder} -%>
</ul>

<script>
  $j('.asset_card_item').tooltip();
  $j(document).ready(function () {
    setupAssetCardDraggable('asset_card_item');
  });

</script>