<h1>API Token</h1>

<div class="row">
  <div class="col-sm-6">
    <div class="alert alert-info" role="alert">
      Please copy this token, it will not be shown again!
    </div>

    <div class="alert alert-danger" role="alert">
      This token allows access to your <%= Seek::Config.instance_name %> account. Do not share it with anyone.
    </div>

    <div class="form-group">
      <label>Your token is</label>
      <div class="input-group">
        <%= text_field_tag 'token', @api_token.token, readonly: 'readonly', class: 'form-control' %>
        <span class="input-group-btn">
          <button class="btn-default btn clipboard-btn" data-clipboard-target="#token">
            <span class="glyphicon glyphicon-copy" aria-hidden="true"></span>
            Copy
          </button>
        </span>
      </div>
    </div>

    <%= link_to('Back to API tokens', user_api_tokens_path, class: 'btn btn-default') %>
  </div>
</div>
